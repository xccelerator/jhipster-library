<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity BorrowedBook.
    -->
    <changeSet id="20240417192854-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="book_isbn"
                                 baseTableName="borrowed_book"
                                 constraintName="fk_borrowed_book__book_isbn"
                                 referencedColumnNames="isbn"
                                 referencedTableName="book"
                                 onDelete="CASCADE"
                                 />

        <addForeignKeyConstraint baseColumnNames="clinet_id"
                                 baseTableName="borrowed_book"
                                 constraintName="fk_borrowed_book__clinet_id"
                                 referencedColumnNames="id"
                                 referencedTableName="client"
                                 onDelete="CASCADE"
                                 />
    </changeSet>
</databaseChangeLog>
